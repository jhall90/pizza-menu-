@model List<Menu_Project.Models.Dish>
@{
    ViewData["Title"] = "MenuIndex";
}

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" alt="BBQ Pizza" style="width: 70%; max-width: 70%; height: 50%; max-height: 50%; border-radius: 10px;"/>
                </div>
                <div class="d-flex justify-content-center">
                    <h6>Price: $@item.Price.ToString("N2")</h6>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"> View Ingredients</a>
                </div>
            </div>
        }
    </div>
</div>
