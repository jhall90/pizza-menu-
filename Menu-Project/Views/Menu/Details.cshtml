@model Menu_Project.Models.Dish
@{
    ViewData["Title"] = "Ingredient Info";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageUrl" alt="BBQ Pizza" style="width: 50%; max-width: 50%; border-radius: 10px;" />
    </div>
    <div class="d-flex justify-content-center">
        <h6>Price: $@Model.Price.ToString("N2")</h6>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <h5>Ingredients:</h5>
        <ul>
            @foreach(var item in Model.DishIngredients)
            {
                <li>@item.Ingredient.Name</li>
            }
        </ul>
    </div>
    <div class="d-flex justify-content-center">
        <a class="btn btn-info" asp-action="Index">Back to Menu</a>
    </div>
</div>